<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cloud_noLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/noLogin"
        android:textSize="@dimen/baseSize" />

    <RelativeLayout
        android:id="@+id/cloud_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/cloud_imgCloud"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cloud" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cloud_imgCloud"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/cloud_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="@dimen/baseSize" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:gravity="center"
            android:padding="10dp"
            android:text="云服务已就绪,将自动存取文件"
            android:textSize="@dimen/baseSize"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/E:/githubCode/CloudMemo/app/src/main/res/layout/fragment_cloud.xml -->